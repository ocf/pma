apiVersion: v1
kind: Service
metadata:
  name: phpmyadmin-service
spec:
  selector:
    app: phpmyadmin
  ports:
    - port: 80
      targetPort: 8000
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: phpmyadmin-deployment
  labels:
    app: phpmyadmin
spec:
  replicas: 3
  selector:
    matchLabels:
      app: phpmyadmin
  template:
    metadata:
      labels:
        app: phpmyadmin
    spec:
      containers:
        - name: phpmyadmin-deploy
          image: "docker.ocf.berkeley.edu/pma:<%= version %>"
          resources:
            limits:
              memory: 1Gi
              cpu: 175m
          ports:
            - containerPort: 8000
      dnsPolicy: ClusterFirst
      dnsConfig:
        searches:
          - "ocf.berkeley.edu"
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: dev-pma.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: phpmyadmin-service
              servicePort: 80
